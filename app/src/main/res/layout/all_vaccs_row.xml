<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/vaccBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/vaccinePic"
            android:background="#00000000"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/vaccinated_img"></ImageView>

        <TextView
            android:id="@+id/vaccTitle"
            android:layout_width="match_parent"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/vaccinePic"
            android:layout_toRightOf="@id/vaccinePic"
            android:text="Title"
            android:textColor="#4CAF50"
            android:textSize="22sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vaccDesc"
            android:background="#00000000"
            android:text="Description"
            android:textSize="18sp"
            android:textColor="#a9a9a9"
            android:layout_toRightOf="@id/vaccinePic"
            android:layout_toEndOf="@id/vaccinePic"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/vaccTitle">
        </TextView>

        <TextView
            android:id="@+id/vaccRenewDate"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vaccDesc"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/vaccinePic"
            android:text="Auffrischungs-Termin: 24-05-2025"
            android:textColor="#a9a9a9"
            android:textSize="18sp">

        </TextView>

        <TextView
            android:id="@+id/vaccManufacturer"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vaccRenewDate"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/vaccinePic"
            android:text="Hersteller: "
            android:textColor="#a9a9a9"
            android:textSize="18sp">

        </TextView>



    </RelativeLayout>


</androidx.cardview.widget.CardView>